@model IEnumerable<EShop.Models.Product>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Products";
}

<div class="container body-content">
    <div class="container-fluid fruite py-5">
        <div class="container py-5">
            <h1 class="mb-4">Fresh fruits shop</h1>
            @if (Request.IsAuthenticated && User.Identity.GetUserName().Equals("admin@admin.com"))
            {
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
            }
            <div class="row g-4">
                <div class="col-lg-12">
                    <div class="row g-4">

                        <div class="col-6"></div>

                    </div>
                    <div class="row g-4">
                        <div class="col-lg-3">
                            <div class="row g-4">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <h4>Categories</h4>
                                        <ul class="list-unstyled fruite-categorie">
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a href="/Products/Index/1"><i class="fas fa-apple-alt me-2"></i>Fruits</a>
                                                    <span>(6)</span>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="d-flex justify-content-between fruite-name">
                                                    <a href="/Products/Index/2"><i class="fas fa-apple-alt me-2"></i>Vegetables</a>
                                                    <span>(5)</span>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <div class="row g-4 justify-content-center">
                                @foreach (var item in Model)
                                {

                                    <div class="col-md-2 col-lg-4 col-xl-4">
                                        <div class="rounded position-relative fruite-item">
                                            <div class="fruite-img">
                                                <img src="~/Content/images/@Html.DisplayFor(modelItem => item.Img)" class="img-fluid w-100 rounded-top" alt="">
                                            </div>
                                            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@Html.DisplayFor(modelItem => item.Category.Name)</div>
                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                                                <div class="d-flex justify-content-between flex-lg-wrap">
                                                    <p class="text-dark fs-5 fw-bold mb-0">$@Html.DisplayFor(modelItem => item.Price) / kg</p>
                                                    <a href="/Cart/AddItem/@Html.DisplayFor(modelItem => item.Id)" class="btn border border-secondary rounded-pill px-3 text-primary">
                                                        <i class="fa fa-shopping-bag me-2 text-primary"> Add to cart</i>
                                                    </a>


                                                    @if (Request.IsAuthenticated && User.Identity.GetUserName().Equals("admin@admin.com"))
                                                    {
                                                        <br />
                                                        <a href="/Products/Edit/@Html.DisplayFor(modelItem => item.Id)" >
                                                            Edit
                                                        </a>
                                                        <a href="/Products/Delete/@Html.DisplayFor(modelItem => item.Id)" >
                                                            Delete
                                                        </a>
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
</div>
