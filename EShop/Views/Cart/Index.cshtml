@model IEnumerable<EShop.Models.DesignCart>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Cart";
}

<div style="background: url(/Content/images/cart-page-header-img.jpg); background-position: center center; background-repeat: no-repeat; background-size: cover; " class="container-fluid page-header py-3">
    <h1 class="text-center text-white display-3">Cart</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item"><a href="/Products/Index">Products</a></li>
        <li class="breadcrumb-item active text-white">Cart</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Products</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">
                                <div class="d-flex align-items-center">
                                    <img src="~/Content/images/@Html.DisplayFor(modelItem => item.ProductImg)" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                                </div>
                            </th>
                            <td>
                                <p class="mb-0 mt-4">@Html.DisplayFor(modelItem => item.ProductName)</p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4"> @Html.DisplayFor(modelItem => item.ProductPrice) $</p>
                            </td>
                            <td>
                                <div class="input-group quantity mt-4" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <a href="/Cart/DincrementItem/@Html.DisplayFor(modelItem => item.ProductID)" class="btn btn-sm btn-minus rounded-circle bg-light border">
                                            <i class="fa fa-minus"></i>
                                        </a>
                                    </div>
                                    <span class="form-control form-control-sm text-center border-0">
                                        @Html.DisplayFor(modelItem => item.QTY)
                                    </span>
                                    <div class="input-group-btn">
                                        <a href="/Cart/IncrementItem/@Html.DisplayFor(modelItem => item.ProductID)" class="btn btn-sm btn-plus rounded-circle bg-light border">
                                            <i class="fa fa-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="mb-0 mt-4"> @Html.DisplayFor(modelItem => item.Total) $</p>
                            </td>
                            <td>
                                <a href="/Cart/RemoveItem/@Html.DisplayFor(modelItem => item.ProductID)" class="btn btn-md rounded-circle bg-light border mt-4">
                                    <i class="fa fa-times text-danger"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Subtotal:</h5>
                            <p class="mb-0">
                                @{
                                    double sum = 0;
                                    foreach (var item in Model)
                                    {
                                        sum += Convert.ToDouble(item.Total);
                                    }
                                    @Html.DisplayTextFor(modelItem => sum)
                                }$
                            </p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Shipping</h5>
                            <div class="">
                                <p class="mb-0">Flat rate: $3.00</p>
                            </div>
                        </div>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Total</h5>
                        <p class="mb-0 pe-4">
                            @{
                                sum = sum + 3;
                                @Html.DisplayTextFor(modelItem => sum)
                            } $
                        </p>
                    </div>
                    @if (Request.IsAuthenticated && sum != 3)
                    {
                        <a href="/Orders/MakeOrder" class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4">Proceed Checkout</a>
                    }
                    else if (Request.IsAuthenticated && sum == 3)
                    {
                        <a href="/Products/Index/0" class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4">Go to Products</a>
                    }
                    else
                    {
                        <a href="/Account/Login" class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4">Login First</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

